{
  "name": "@availity/availity-react",
  "private": true,
  "description": "React components using Availity UIKit and Bootstrap 4",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Availity/availity-react.git"
  },
  "scripts": {
    "format": "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js' 'packages/*/!(docs)/**/*.js'",
    "lint": "eslint .",
    "bootstrap": "lerna bootstrap",
    "lerna": "lerna",
    "link": "lerna link",
    "clean": "lerna clean",
    "precommit": "lint-staged",
    "test": "jest",
    "postinstall": "npm run bootstrap",
    "start": "npm start --prefix packages/docs",
    "build:docs": "npm run build --prefix packages/docs",
    "release": "sh ./scripts/release.sh",
    "deploy-docs": "npm run deploy-docs --prefix packages/docs",
    "updated": "lerna updated",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/config-lerna-scopes": "^7.0.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^23.0.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "conventional-changelog-cli": "^2.0.1",
    "conventional-recommended-bump": "^4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-availity": "^3.0.0-beta.11",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-environment-jsdom-global": "^1.0.2",
    "lerna": "^2.5.1",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.8.2",
    "prettier": "^1.8.2",
    "prop-types": "^15.5.7",
    "raf": "^3.4.0",
    "raw-loader": "^0.5.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.2.0",
    "regenerator-runtime": "^0.11.0",
    "sass-loader": "^7.0.3"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>.*(node_modules)(?!.*@availity.*).*$"
    ],
    "setupFiles": [
      "raf/polyfill"
    ],
    "testEnvironment": "jest-environment-jsdom-global",
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-class-properties",
          "transform-object-rest-spread"
        ],
        "presets": [
          "jest",
          "react",
          "stage-0",
          [
            "env",
            {
              "debug": false,
              "modules": "commonjs",
              "targets": {
                "node": "current"
              },
              "useBuiltIns": true
            }
          ]
        ]
      }
    }
  },
  "contributors": [
    "tyson warner (https://github.com/nylon22)",
    "robert mcguinness (https://github.com/robmcguinness)"
  ],
  "bugs": {
    "url": "https://github.com/Availity/availity-react/issues"
  },
  "homepage": "https://github.com/Availity/availity-react#readme",
  "version": "1.3.7",
  "main": "index.js",
  "keywords": [
    "availity",
    "react",
    "ui"
  ],
  "author": "Robert McGuinness <rob.mcguinness@availity.com>"
}
