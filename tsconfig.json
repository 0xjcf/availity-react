{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@availity/analytics": ["packages/analytics"],
      "@availity/app-icon": ["packages/app-icon"],
      "@availity/authorize": ["packages/authorize"],
      "@availity/avatar": ["packages/avatar"],
      "@availity/breadcrumbs": ["packages/breadcrumbs"],
      "@availity/date": ["packages/date"],
      "@availity/favorites": ["packages/favorites"],
      "@availity/feature": ["packages/feature"],
      "@availity/feedback": ["packages/feedback"],
      "@availity/form": ["packages/form"],
      "@availity/form-upload": ["packages/form-upload"],
      "@availity/help": ["packages/help"],
      "@availity/hooks": ["packages/hooks"],
      "@availity/icon": ["packages/icon/src"],
      "@availity/link": ["packages/link"],
      "@availity/list-group": ["packages/list-group"],
      "@availity/list-group-item": ["packages/list-group-item"],
      "@availity/page-header": ["packages/page-header"],
      "@availity/pagination": ["packages/pagination"],
      "@availity/payer-logo": ["packages/payer-logo"],
      "@availity/phone": ["packages/phone"],
      "@availity/progress": ["packages/progress"],
      "@availity/reactstrap-validation-date": ["packages/reactstrap-validation-date"],
      "@availity/reactstrap-validation-select": ["packages/reactstrap-validation-select"],
      "@availity/select": ["packages/select"],
      "@availity/spaces": ["packages/spaces"],
      "@availity/step-wizard": ["packages/step-wizard"],
      "@availity/table": ["packages/table"],
      "@availity/training-link": ["packages/training-link/src"],
      "@availity/typography": ["packages/typography"],
      "@availity/upload": ["packages/upload"]
    }
  },
  "exclude": ["**/node_modules/"]
}
